@inherits ReactiveComponentBase<DocumentTypeViewModel>
@if (ViewModel != null)
{
    <AlertView Alert="ViewModel.Alert" />
    <h3>Document Type: @ViewModel.Name</h3>
    <MudStack Row="true">
        <MudTextField @bind-Value="ViewModel.Name" Label="Name" />
        <MudButton OnClick="ViewModel.Update.BindCommand<MouseEventArgs>()" Color="Color.Primary">Update</MudButton>
    </MudStack>
}
