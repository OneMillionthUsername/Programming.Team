@inherits ReactiveComponentBase<AddRoleViewModel>
@if(ViewModel != null)
{
    <AlertView Alert="ViewModel.Alert"></AlertView>
    <h3>Add Role</h3>
    <MudStack Row="true">
        <MudTextField id="roleName" Label="Role Name" @bind-Value="ViewModel.Name" Variant="Variant.Outlined"></MudTextField>
        <MudButton Variant="Variant.Filled" Color="Color.Primary"
                   OnClick="ViewModel.Add.BindCommand<MouseEventArgs>()"><i class="fa-solid fa-plus"></i></MudButton>
    </MudStack>
}
@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && ViewModel != null)
            await ViewModel.Init.Execute().GetAwaiter();
        await base.OnAfterRenderAsync(firstRender);
    }
}
