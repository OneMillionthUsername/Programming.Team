@inherits ReactiveComponentBase<PositionViewModel>

@if(ViewModel != null)
{
    <AlertView Alert="ViewModel.Alert"/>
    <MudStack>
        <MudText>Company: @ViewModel.Company.Name</MudText>
        <MudTextField @bind-Value="ViewModel.Title" Label="Title" Variant="Variant.Outlined" />
        <MudDatePicker @bind-Date="ViewModel.StartDateTime" Label="Start Date" />
        <MudDatePicker @bind-Date="ViewModel.EndDateTime" Label="End Date" />
        <MudTextField Lines="10" @bind-Value="ViewModel.Description" Label="Description" Variant="Variant.Outlined" />
        <MudTextField @bind-Value="ViewModel.SortOrder" Label="Sort Order" Variant="Variant.Outlined" />
        <MudStack Row="true">
            <MudButton OnClick="ViewModel.Update.BindCommand<MouseEventArgs>()">Update</MudButton>
            <MudButton OnClick="ViewModel.Delete.BindCommand<MouseEventArgs>()">Delete</MudButton>
        </MudStack>
        <PositionSkillsView ViewModel="ViewModel.SkillsViewModel"/>
    </MudStack>
}

