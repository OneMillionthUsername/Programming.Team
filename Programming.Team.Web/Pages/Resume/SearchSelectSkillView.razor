@inherits ReactiveComponentBase<SearchSelectSkillViewModel>
@if(ViewModel != null)
{
    <AlertView Alert="ViewModel.Alert"/>
    <MudStack>
        <MudAutocomplete T="Skill" CoerceText="true" Label="Skill" ToStringFunc="c => c.Name"
                         @bind-Value="ViewModel.Selected" DebounceInterval="250" SearchFunc="ViewModel.Search.BindCommand()" />
        @if (ViewModel.CanAdd)
        {
            <MudButton OnClick="ViewModel.StartAdd.BindCommand<MouseEventArgs>()">Add Skill</MudButton>
            <AddSkillView ViewModel="ViewModel.AddViewModel"/>
        }
    </MudStack>
}
