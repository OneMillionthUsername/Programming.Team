@inherits ReactiveComponentBase<ReccomendationViewModel>

@if (ViewModel != null)
{
    <AlertView Alert="ViewModel.Alert" />
    <MudStack>
        <MudText>Postion: @ViewModel.Position?.Company?.Name</MudText>
        <MudTextField @bind-Value="ViewModel.Name" Label="Name" Variant="Variant.Outlined" />
        <MudTextField Lines="10" @bind-Value="ViewModel.Body" Label="Body" Variant="Variant.Outlined" />
        <MudTextField @bind-Value="ViewModel.SortOrder" Label="Sort Order" Variant="Variant.Outlined" />
        <MudStack Row="true">
            <MudButton OnClick="ViewModel.Update.BindCommand<MouseEventArgs>()">Update</MudButton>
            <MudButton OnClick="ViewModel.Delete.BindCommand<MouseEventArgs>()">Delete</MudButton>
        </MudStack>
    </MudStack>
}

